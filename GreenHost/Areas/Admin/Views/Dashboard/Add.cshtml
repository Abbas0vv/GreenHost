@model TeamMemberViewModel

<div class="container mt-5 d-flex flex-column">
    <form method="post" enctype="multipart/form-data" asp-action="Add">
        <div class="row">
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.Name" for="exampleFormControlInput1" class="form-label">Name</label>
                <input asp-for="@Model.Name" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your name">
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.Surname" for="exampleFormControlInput1" class="form-label">Surname</label>
                <input asp-for="@Model.Surname" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your surname">
                <span class="text-danger" asp-validation-for="@Model.Surname"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" for="exampleFormControlTextarea1" class="form-label">Description</label>
            <textarea asp-for="@Model.Description" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter Description"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.File" for="formFile" class="form-label">Default file input example</label>
            <input asp-for="@Model.File" class="form-control" type="file" id="formFile">
            <span class="text-danger" asp-validation-for="@Model.File"></span>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
        <a type="button" asp-action="Index" class="btn btn-dark">Back To Dashboard</a>
    </form>
</div>